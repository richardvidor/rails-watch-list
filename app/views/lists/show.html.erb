<div class="show-main-img">
  <h1><%= @list.name %></h1>
</div>
<div class="add-movie-div">
  <%= link_to 'Add Movie', new_list_bookmark_path(@list), class: "add-movie-link" %>
</div>
<div class="show-bookmarks">
  <% @list.bookmarks.each do |bookmark| %>
      <div class="show-bookmark">
        <%= image_tag bookmark.movie.poster_url, height: 300 %>
        <%= link_to bookmark.movie.title, movie_path(bookmark.movie) %>
        <p><%= bookmark.comment %></p>
        <%= link_to 'Remove', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
      </div>
    <% end %>
</div>
  


